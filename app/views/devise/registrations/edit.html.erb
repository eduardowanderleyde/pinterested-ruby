<div class="panel panel-default">
  <!-- Panel heading with a title -->
  <div class="panel-heading">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <!-- Panel body containing the form -->
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <!-- Render shared error messages if any -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email field -->
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Pending reconfirmation message -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password field -->
      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <small><em><%= @minimum_password_length %> characters minimum</em></small>
        <% end %>
      </div>
      
      <!-- Current password field -->
      <div class="form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <!-- Submit button -->
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Panel for account cancellation -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Cancel my account</h3>
  </div>
  <div class="panel-body">
    <div>
      Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to "Back", :back, class: "btn btn-default" %>
  </div>
</div>
